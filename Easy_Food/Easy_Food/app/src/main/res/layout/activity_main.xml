<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abstract_logo_of_a_cafe_or_restaurant__a_spoon_and_fork_on_a_plate__a_simple_outline"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:rotation="37"
        android:rotationX="-8"
        app:srcCompat="@drawable/fondo2_app"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="10dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="81dp"
        android:layout_height="79dp"
        android:rotation="-21"
        android:rotationY="12"
        app:srcCompat="@drawable/fondo_app"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="636dp" />

    <TextView
        android:id="@+id/txtcreador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benjamin Ortiz "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <EditText
        android:id="@+id/rnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEE58"
        android:backgroundTint="#FFCA28"
        android:ems="10"
        android:inputType="textPersonName"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="239dp" />

    <EditText
        android:id="@+id/rpasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFCA28"
        android:backgroundTint="#FFCA28"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:id="@+id/tnombre"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:background="@color/white"
        android:backgroundTint="#F44336"
        android:text="txtuser"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="187dp"
        tools:text="Usuario" />

    <TextView
        android:id="@+id/tpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EF5350"
        android:text="txtpasss"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="305dp"
        tools:text="Contraseña" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:background="#F44336"
        android:backgroundTint="#C3DD3838"
        android:fontFamily="sans-serif-medium"
        android:text="txtapp"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="56dp"
        tools:text="¡¡EASY FOOD!!" />

    <Button
        android:id="@+id/btingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EF5350"
        android:backgroundTint="#EF5350"
        android:text="Ingresar"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/btregistrar"
        android:layout_width="137dp"
        android:layout_height="37dp"
        android:background="#EF5350"
        android:backgroundTint="#EF5350"
        android:text="Registrar"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="487dp" />

    <TextView
        android:id="@+id/txtversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.0"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="676dp" />

</androidx.constraintlayout.widget.ConstraintLayout>